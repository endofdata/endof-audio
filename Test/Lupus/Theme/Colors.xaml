<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Color x:Key="ForegroundColor">#FFFFA500</Color>
	<Color x:Key="BackgroundColor">#0A0A0A</Color>
	<Color x:Key="AccentColor1">#FFFF0000</Color>
	<Color x:Key="AccentColor2">#FF8B0000</Color>
	<Color x:Key="ShadowColor1">#1A1A18</Color>
	<Color x:Key="ShadowColor2">#3A3A38</Color>


	<SolidColorBrush x:Key="Background" Color="{StaticResource BackgroundColor}"/>
	<SolidColorBrush x:Key="Foreground" Color="{StaticResource ForegroundColor}"/>
	<SolidColorBrush x:Key="Accent1" Color="{StaticResource AccentColor1}"/>
	<SolidColorBrush x:Key="Accent2" Color="{StaticResource AccentColor2}"/>
	<SolidColorBrush x:Key="Shadow1" Color="{StaticResource ShadowColor1}"/>
	<SolidColorBrush x:Key="Shadow2" Color="{StaticResource ShadowColor2}"/>
</ResourceDictionary>